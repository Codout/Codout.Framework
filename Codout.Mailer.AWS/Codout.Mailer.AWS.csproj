<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
        <Version>1.0.1-rc.3</Version>
        <Authors>Clovis Coli Jr</Authors>
        <Company>Codout</Company>
        <Description>Sender da Amazon Simple Email Service para envio de E-mails utilizando a biblioteca Codout.Mailer</Description>
        <Copyright>Codout</Copyright>
        <PackageLicenseUrl>https://github.com/Codout/Codout.Framework/blob/master/LICENSE</PackageLicenseUrl>
        <RepositoryUrl>https://github.com/Codout/Codout.Framework</RepositoryUrl>
        <PackageTags>Codout;Framework;Mail;Email;Mailer;SendGrid;</PackageTags>
        <RepositoryType>git</RepositoryType>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
        <PackageIcon>logo-nuget.png</PackageIcon>
        <PackageProjectUrl>https://github.com/Codout/Codout.Framework</PackageProjectUrl>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="AWSSDK.SimpleEmailV2" Version="3.7.0.40" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Codout.Mailer\Codout.Mailer.csproj" />
    </ItemGroup>

    <ItemGroup>
        <None Include="..\logo-nuget.png">
            <Pack>True</Pack>
            <PackagePath></PackagePath>
        </None>
    </ItemGroup>

</Project>
